{
    "manifest_version": 3,

    "name": "Idea Jotter Plugin",
    "description": "This extension will allow you to jot down ideas to a remote file",
    "version": "1.0",

    "action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },

    "background": {
        "service_worker": "context.js"
    },

    "permissions": [
        "contextMenus"
    ],

    "icons": {
        "16": "icon-bitty.png",
        "48": "icon-small.png",
        "128": "icon-large.png"
    }
}